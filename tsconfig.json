{
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ES2020",
    "sourceMap": true,
    "lib": ["ESNext", "DOM"],
    "outDir": "dist",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "types": ["node", "vitest/globals"],
    "typeRoots": ["./node_modules", "./node_modules/@types"]
  },
  "include": ["server/**/*", "package.json"]
}
