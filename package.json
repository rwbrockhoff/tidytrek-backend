{
	"name": "tt-backend",
	"version": "1.0.0",
	"description": "Tidytrek Backend API",
	"author": "Ryan Brockhoff <ryanbrockhoff@protonmail.com>",
	"main": "server/index.js",
	"type": "module",
	"private": true,
	"license": "UNLICENSED",
	"config": {
		"commitizen": {
			"path": "./node_modules/cz-conventional-changelog"
		}
	},
	"scripts": {
		"commit": "cz",
		"build": "npx tsc && cp ecosystem.config.cjs dist/",
		"start": "NODE_ENV=production node --import=./instrument.js server/index.js",
		"pm2:start": "/usr/local/bin/pm2 start ecosystem.config.cjs",
		"pm2:restart": "/usr/local/bin/pm2 restart tidytrek-api || npm run pm2:start",
		"dev": "NODE_ENV=development tsx watch server/index.ts",
		"dev:hybrid": "docker compose up postgres redis -d && npm run dev",
		"dev:test": "NODE_ENV=test PORT=4002 tsx watch server/index.ts",
		"lint": "eslint server/**/*.ts",
		"dev:migrate-make": "NODE_OPTIONS='--import=tsx' knex migrate:make",
		"dev:migrate": "NODE_OPTIONS='--import=tsx' knex migrate:latest",
		"dev:migrate-rollback": "NODE_ENV=development NODE_OPTIONS='--import=tsx' knex migrate:rollback",
		"dev:migrate-unlock": "NODE_OPTIONS='--import=tsx' knex migrate:unlock",
		"dev:seed-make": "NODE_OPTIONS='--import=tsx' knex seed:make",
		"dev:seed": "NODE_ENV=development NODE_OPTIONS='--import=tsx' knex seed:run",
		"dev:db-setup": "npm run dev:migrate && npm run dev:seed",
		"dev:db-reset": "npm run dev:migrate-rollback && npm run dev:migrate && npm run dev:seed",
		"test": "npm run build && NODE_ENV=test npm run test:setup && vitest --run",
		"test:coverage": "npm run build && NODE_ENV=test npm run test:setup && vitest run --coverage --coverage.reporter=html",
		"test:setup": "npm run test:db-reset && npm run test:migrate && npm run test:seed",
		"test:db-reset": "npm run test:migrate-unlock && npm run test:migrate-rollback",
		"test:migrate": "NODE_ENV=test NODE_OPTIONS='--import=tsx' knex migrate:latest",
		"test:migrate-rollback": "NODE_ENV=test NODE_OPTIONS='--import=tsx' knex migrate:rollback",
		"test:seed": "NODE_ENV=test NODE_OPTIONS='--import=tsx' knex seed:run",
		"test:seed-packs": "NODE_ENV=test NODE_OPTIONS='--import=tsx' knex seed:run --specific=03_e2e_pack_data.js",
		"test:migrate-unlock": "NODE_ENV=test NODE_OPTIONS='--import=tsx' knex migrate:unlock",
		"prod:migrate": "NODE_ENV=production knex migrate:latest",
		"docker:up": "docker compose up",
		"docker:down": "docker compose down",
		"docker:reset": "docker compose down -v && docker compose up -d && npm run docker:db-setup",
		"docker:migrate": "docker compose exec api npm run dev:migrate",
		"docker:seed": "docker compose exec api npm run dev:seed",
		"docker:db-setup": "npm run docker:migrate && npm run docker:seed",
		"docker:logs": "docker compose logs api",
		"docker:test:up": "docker compose --profile test up -d",
		"docker:test:down": "docker compose --profile test down",
		"docker:test:reset": "docker compose --profile test down -v && npm run docker:test:up && npm run docker:test:db-setup",
		"docker:test:migrate": "docker compose exec api-test npm run test:migrate",
		"docker:test:seed": "docker compose exec api-test npm run test:seed",
		"docker:test:seed-packs": "docker compose exec api-test npm run test:seed-packs",
		"docker:test:db-setup": "npm run docker:test:migrate && npm run docker:test:seed",
		"prepare": "[ \"$NODE_ENV\" = \"development\" ] && husky || true"
	},
	"devDependencies": {
		"@testing-library/jest-dom": "^6.2.1",
		"@types/compression": "^1.8.1",
		"@types/cookie-parser": "^1.4.6",
		"@types/cors": "^2.8.17",
		"@types/express": "^4.17.21",
		"@types/jest": "^29.5.11",
		"@types/morgan": "^1.9.10",
		"@types/multer": "^1.4.11",
		"@types/multer-s3": "^3.0.3",
		"@types/node": "^20.10.4",
		"@types/redis": "^4.0.10",
		"@types/supertest": "^6.0.2",
		"@typescript-eslint/eslint-plugin": "^6.19.1",
		"@typescript-eslint/parser": "^6.19.1",
		"@vitest/coverage-v8": "^1.1.0",
		"commitizen": "^4.3.1",
		"cz-conventional-changelog": "^3.3.0",
		"eslint": "^8.56.0",
		"husky": "^9.1.7",
		"supertest": "^6.3.3",
		"tsx": "^4.7.0",
		"typescript": "^5.3.3",
		"vite-tsconfig-paths": "^4.2.3",
		"vitest": "^1.1.0"
	},
	"dependencies": {
		"@aws-sdk/client-s3": "^3.515.0",
		"@sentry/node": "^9.35.0",
		"@supabase/supabase-js": "^2.39.7",
		"camelcase-keys": "^9.1.2",
		"compression": "^1.8.1",
		"cookie-parser": "^1.4.6",
		"cors": "^2.8.5",
		"dotenv": "^16.3.1",
		"express": "^4.18.2",
		"express-rate-limit": "^7.5.1",
		"helmet": "^8.1.0",
		"knex": "^3.1.0",
		"morgan": "^1.10.0",
		"multer": "^1.4.5-lts.1",
		"multer-s3": "^3.0.1",
		"pg": "^8.11.3",
		"puppeteer": "^22.6.2",
		"rate-limit-redis": "^4.2.1",
		"redis": "^5.8.1",
		"snakecase-keys": "^5.5.0",
		"winston": "^3.17.0",
		"zod": "^4.0.5"
	}
}
